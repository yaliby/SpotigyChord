    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run site (auto server)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "Server ready on http://localhost:(\\d+)",
                "uriFormat": "http://localhost:%s/index.html",
                "action": "openExternally"
            }
        }
    ]
}
